CREATE TABLE ACCOUNT_TBL (
    ACCOUNT_NUMBER VARCHAR2(20) CONSTRAINT ACCOUNT_NUMBER_PK PRIMARY KEY,
    CUSTOMER_NAME  VARCHAR2(15),
    BALANCE        NUMBER(10,2)
);
INSERT INTO ACCOUNT_TBL VALUES ('1234567890', 'KAMALI', 85000);
INSERT INTO ACCOUNT_TBL VALUES ('1234567891', 'THARA', 56789);
INSERT INTO ACCOUNT_TBL VALUES ('1234567892', 'SAKTHI', 56723);
INSERT INTO ACCOUNT_TBL VALUES ('1234567893', 'THAVAM', 56788);

COMMIT;
CREATE TABLE TRANSFER_TBL (
    TRANSACTION_ID NUMBER(4) CONSTRAINT TRANS_ID_PK PRIMARY KEY,
    ACCOUNT_NUMBER VARCHAR2(20),
    BENEFICIARY_ACCOUNT_NUMBER VARCHAR2(20),
    TRANSACTION_DATE DATE,
    TRANSACTION_AMOUNT NUMBER(10,2),

    CONSTRAINT ACC_NUM_FK
        FOREIGN KEY (ACCOUNT_NUMBER)
        REFERENCES ACCOUNT_TBL (ACCOUNT_NUMBER),

    CONSTRAINT BENE_ACC_FK
        FOREIGN KEY (BENEFICIARY_ACCOUNT_NUMBER)
        REFERENCES ACCOUNT_TBL (ACCOUNT_NUMBER)
);
CREATE SEQUENCE TRANSACTIONID_SEQ
START WITH 1000
INCREMENT BY 1
MINVALUE 1000
MAXVALUE 9999
NOCACHE
NOCYCLE;
SELECT TRANSACTIONID_SEQ.NEXTVAL FROM dual;
SELECT * FROM ACCOUNT_TBL;
SELECT * FROM TRANSFER_TBL;
